name: Handle User Code Updates

on:
  push:
    paths:
      - 'UserCode.java' # Solo se activa si este archivo cambia

jobs:
  notify-spring-boot:
    runs-on: ubuntu-latest
    steps:
      - name: Log File Update
        run: echo "UserCode.java ha sido actualizado en el repositorio gh-pages."

      - name: Trigger Spring Boot Workflow
        run: |
          curl -X POST \
            -H "Authorization: Bearer ${{ secrets.SPRING_BOOT_REPO_PAT }}" \
            -H "Accept: application/vnd.github.v3+json" \
            https://api.github.com/repos/null-point-sys/spring_boot_rest_api_crud/dispatches \
            -d '{"event_type": "user_code_update", "client_payload": {"file": "UserCode.java"}}'

