name: Backend Node.js con GitHub Actions

on:
  push:
    branches:
      - main  # Ejecutar este flujo en la rama `main`

jobs:
  build-and-run-backend:
    runs-on: ubuntu-latest

    steps:
      # Clonar el repositorio
      - name: Checkout code
        uses: actions/checkout@v3

      # Configurar Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'

      # Instalar dependencias del backend
      - name: Install dependencies
        run: npm install

      # Instalar ngrok
      - name: Install ngrok
        run: |
          curl -s https://bin.equinox.io/c/bNyj1mQVY4c/ngrok-v3-stable-linux-amd64.tgz | tar xz -C /tmp
          sudo mv /tmp/ngrok /usr/local/bin/ngrok

      # Ejecutar el servidor backend con ngrok
      - name: Run backend server with ngrok
        id: ngrok
        env:
          NGROK_AUTH_TOKEN: ${{ secrets.NGROK_AUTH_TOKEN }}
        run: |
          nohup ngrok config add-authtoken $NGROK_AUTH_TOKEN > /dev/null 2>&1
          nohup ngrok http 3000 > ngrok.log &
          sleep 5
          NGROK_URL=$(curl -s localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url')
          echo "NGROK_URL=${NGROK_URL}" >> $GITHUB_ENV

      # Generar archivo ngrok-url.json
      - name: Generate ngrok URL file
        run: |
          echo "{\"url\": \"${{ env.NGROK_URL }}\"}" > ngrok-url.json

      # Subir archivo a gh-pages
      - name: Deploy ngrok URL to gh-pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./  # El archivo debe estar en la ra√≠z
          publish_branch: gh-pages
          keep_files: true  # Conserva otros archivos existentes en la rama gh-pages
